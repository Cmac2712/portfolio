{
  "name": "portfolio-react",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "next ./src",
    "build": "next build",
    "start": "concurrently 'next start ./src' 'npm run server'",
    "server": "node server/app.js",
    "test": "NODE_ENV=test jest --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@svgr/webpack": "^6.3.1",
    "axios": "^0.25.0",
    "body-parser": "^1.19.1",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "enzyme-to-json": "^3.6.2",
    "express": "^4.17.2",
    "next": "^12.0.8",
    "nodemon": "^2.0.15",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-on-screen": "^2.1.1",
    "react-pose": "^4.0.10",
    "react-scroll-to-component": "^1.0.2",
    "react-svg-loader": "^3.0.3",
    "sass": "^1.54.4",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "babel-jest": "^27.4.6",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "css-loader": "^6.5.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "jest": "^27.4.7",
    "prop-types": "^15.8.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/build/",
      "<rootDir>/node_modules/"
    ],
    "transform": {
      ".*": "babel-jest"
    }
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel",
          [
            "@babel/preset-react",
            {
              "runtime": "automatic"
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel",
          [
            "@babel/preset-react",
            {
              "runtime": "automatic"
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            [
              "@babel/preset-react",
              {
                "runtime": "automatic"
              }
            ]
          ],
          {
            "preset-env": {
              "modules": "commonjs"
            }
          }
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  }
}
